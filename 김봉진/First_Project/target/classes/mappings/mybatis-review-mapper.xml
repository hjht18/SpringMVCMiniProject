<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="sql">
 	<insert id="insert">
 		INSERT INTO review VALUES((SELECT NVL(MAX(review_id), 0)+1 FROM review), #{review_score}, #{review_content}, #{review_regdate})
 	</insert>
 	
 	<select id="boardCount" resultType="_int">
 	<![CDATA[
 		SELECT COUNT(*) FROM review
 	]]>
 	</select>
 	
 	<select id="getBoardList" resultType="reviewVO">
 	<![CDATA[
 		SELECT * FROM review WHERE review_id >= #{bottom} AND review_id <= #{top}
 	]]>
 	</select>
 	
 </mapper>
