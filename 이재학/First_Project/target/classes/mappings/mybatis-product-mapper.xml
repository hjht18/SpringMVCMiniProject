<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ProductDAO"> 
	<resultMap id="productResult" type="productVO">
		<result property="code" column="product_code"/>
		<result property="name" column="product_name"/>
		<result property="content" column="product_content"/>
		<result property="price" column="product_price"/>
		<result property="image" column="product_image"/>
	</resultMap>

	<select id="selectLastest" resultMap = "productResult">
		SELECT * FROM PRODUCT WHERE PRODUCT_CODE = (SELECT MAX(PRODUCT_CODE) FROM PRODUCT)
	</select>
	
	<select id="selectList" resultMap="productResult">
		SELECT * FROM PRODUCT
	</select>
	
	<select id="selectById" resultMap="productResult">
		SELECT * FROM PRODUCT WHERE PRODUCT_CODE = #{code}
	</select>
	
	<insert id="insert">
		INSERT INTO PRODUCT VALUES(PRODUCT_SEQ.NEXTVAL, #{name}, #{content}, #{price}, #{image})
	</insert>
</mapper>
